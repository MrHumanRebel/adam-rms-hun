{% set THISWIDGET = WIDGETS.widget('inventoryTotal', {'instanceid': USERDATA.instance.instances_id}) %}

{% if "ASSETS:ASSET_TYPES:EDIT"|instancePermissions %}
    <div class="card statsWidget" data-widgetname="inventoryTotal">
        <div class="card-header">
            <h3 class="card-title">Eszköz statisztika</h3>
            <div class="card-tools">
                {% if WIDGETS.checkUser('inventoryTotal') %}
                    <button type="button" class="btn btn-sm btn-tool removeWidgetButton" data-card-widget="collapse" data-widgetname="inventoryTotal" title="Eltávolítás a vezérlőpultról">
                        <i class="fas fa-times"></i>
                    </button>
                {% else %}
                    <button type="button" class="btn btn-sm btn-tool addWidgetButton" data-widgetname="inventoryTotal" title="Hozzáadás a vezérlőpulthoz">
                        <i class="fas fa-plus"></i>
                    </button>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                <p class="text-muted">Összes eszköz értéke: <span class="font-weight-bold">{{ THISWIDGET.VALUE|money(USERDATA.instance['instances_config_currency'])|replace({'.00':''}) }}</span></p>
                <p class="text-muted">Összes eszköz tömege: <span class="font-weight-bold">{{ THISWIDGET.MASS|round(2, 'ceil')|number_format(2) }} kg</span></p>
                <p class="text-muted">Összes raktárban lévő eszköz: <span class="font-weight-bold">{{ THISWIDGET.COUNT }} db</span></p>
                <p class="text-muted">Összes eszköz típus: <span class="font-weight-bold">{{ THISWIDGET.TYPES }} db</span></p>
            </div>
        </div> 
    </div>
{% endif %}
